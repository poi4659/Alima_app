<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WithdrawalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_box"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="#00ff0000"
            android:text="&lt;"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:text="회원탈퇴"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="23dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="55dp"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="홍길동"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:text="님"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말 탈퇴하시겠습니까?"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/info_outline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 탈퇴하시면 회원가입 시 입력했던
                     \n개인 정보가 삭제됩니다."
            android:textSize="17dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/info_outline"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탈퇴 후에는 동일한 계정으로 재가입해도
                         \n내역이 복구되지 않습니다."
            android:textSize="17dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginLeft="15dp">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="회원 탈퇴 유의사항을 확인하였으며 동의합니다."
            android:textSize="17dp"
            android:layout_marginBottom="40dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="떠나시는 이유를 알려주세요."
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:layout_marginLeft="15dp"
        android:textSize="13dp"
        android:hint="서비스 탈퇴 사유에 대해 알려주세요.
                    \n고객님의 소중한 피드백을 담아
                    \n더 나은 서비스로 보답 드리도록 하겠습니다." />

    <Button
        android:id="@+id/withdrawButton"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:text="회원 탈퇴"
        android:textStyle="bold"
        android:textColor="@color/darkgray"
        android:background="@color/gray"
        android:layout_gravity="center"
        android:layout_marginTop="65dp"
        android:enabled="false"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
